<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Team4Zoo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Session["Employee_ID"] != null)
                    {
                        if (Session["RoleName"].ToString().Equals("Caregiver"))
                        {
                            <li>@Html.ActionLink("Home", "Index", "CareGiverHome")</li>
                            <li>@Html.ActionLink("My Animals", "Index", "Home")</li>
                            <li>@Html.ActionLink("Exhibits and Attractions", "Index", "Home")</li>
                            <li>@Html.ActionLink("My Schedule", "Index", "Home")</li>

                        }
                        if (Session["RoleName"].ToString().Equals("SalesAssociate"))
                        {
                            <li>@Html.ActionLink("Sales", "Sales", "SalesAssociate")</li>
                            <li>@Html.ActionLink("Inventory", "Inventory", "SalesAssociate")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "SalesAssociate")</li>
                            <li>@Html.ActionLink("My Schedule", "Index", "SalesAssociate")</li>
                        }
                        if (Session["RoleName"].ToString().Equals("Admin"))
                        {
                            <li>@Html.ActionLink("link1", "Index", "Home")</li>
                            <li>@Html.ActionLink("link2", "Index", "Home")</li>
                            <li>@Html.ActionLink("link3", "Index", "Home")</li>
                            <li>@Html.ActionLink("link4", "Index", "Home")</li>
                        }

                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Employee_ID"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>

                    }
                    @if (Session["Employee_ID"] != null)
                    {
                        <li>@Html.ActionLink("Hi " + Session["Name"].ToString().ToUpper() + "!", "Index", "Profile")</li>
                        <li><a href="@Url.Action("LogOut","Login")">Log Out</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
