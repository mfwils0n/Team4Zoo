@model IEnumerable<zoo.Models.Animal>

@{
    ViewBag.Title = "MyAnimals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Animal</title>
<html lang="en">

<head>
    <title>My Animals</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        .collapsible {
            background-color: #4E4D4D;
            color: white;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
        }

            .active, .collapsible:hover {
                background-color: #555;
            }

        .content {
            padding: 0 18px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            background-color: #f1f1f1;
        }

        .collapsible:after {
            content: '\02795'; /* Unicode character for "plus" sign (+) */
            font-size: 13px;
            color: white;
            float: right;
            margin-left: 5px;
        }

        .active:after {
            content: "\2796"; /* Unicode character for "minus" sign (-) */
        }

        p.pad {
            border: 1px solid red;
            padding-top: 45px;
        }
    </style>
</head>
<body>
    <p class="pad"></p>
    <button class="collapsible">Animals</button>
    <div class="content">
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Animal Name")
                </th>
                <th>
                    @Html.Label("Date of Birth")
                </th>
                <th>
                    @Html.Label("Weight")
                </th>
                <th>
                    @Html.Label("Exhibit")
                </th>
                <th>
                    @Html.Label("Caregiver 1")
                </th>
                <th>
                    @Html.Label("Caregiver 2")
                </th>
                <th>
                    @Html.Label("Caregiver 3")
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.animal_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibit_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignee1_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignee2_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assignee3_name)
            </td>
            <td>

                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Edit</button>
                    <button type="button" class="btn btn-primary">Details</button>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Message</button>
                </div>
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Please choose a message type and enter your message:</h4>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" id="msgbtn" aria-haspopup="true" aria-expanded="false" type="button" data-toggle="dropdown">
                                        Message Type
                                        <span class="caret"></span>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="msgbtn">
                                        <a class="dropdown-item" href="#">To Supervisor</a>
                                        <a class="dropdown-item" href="#">Announcement</a>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" id="message"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Send</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </td>

        </tr>

            }

        </table>
        <button type="button" class="btn btn-primary" onclick="Redirect_addAnim()">Add New</button>
    </div>

    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.maxHeight) {
                    content.style.maxHeight = null;
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
        }


        function Redirect_addAnim() {
            location.href = "AddAnim";
        }
    </script>
</body>
</html>